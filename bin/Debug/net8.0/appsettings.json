{
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdealTripDbConnection": "%ENV_IDEALTRIPDBCONNECTION%"
  },
  "Jwt": {
    "Key": "%ENV_JWT_SECRET_KEY%", // Replace with a secure key
    "Issuer": "IdealTrip",
    "Audience": "IdealTripUsers",
    "ExpiresInMinutes": 60
  },
  "SendGrid": {
    "ApiKey": "%ENV_SENDGRID_API_KEY%",
    "SenderEmail": "ideal.trrip@gmail.com",
    "SenderName": "Ideal Trip"
  }

}
